{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "index.js",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}